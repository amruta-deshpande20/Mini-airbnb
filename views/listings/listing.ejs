<% layout('/layout/boilerplate') -%>
<body>
    <h3>All Listings</h3>

   <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
      <% for(listings of allListings ){ %>
      <a href="/listings/<%= listings.id %>" class="listing-link">
      <div class="card col">
          <img src="<%= listings.image && listings.image.url ? listings.image.url : '' %>" class="card-img-top" alt="listing_image" style="height:20rem">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
            <b><%= listings.title %></b> 
              <br>
              &#8377; <%= listings.price ? listings.price.toLocaleString("en-IN") : "0" %> / night
            </p>
          </div>
      </div>
    </a>

      <% } %>
   </div>
</body>
